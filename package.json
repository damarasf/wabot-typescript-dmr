{
  "name": "wabot-typescript-dmr",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:cli": "sequelize-cli db:migrate",
    "migrate:cli:undo": "sequelize-cli db:migrate:undo",
    "migrate:cli:undo:all": "sequelize-cli db:migrate:undo:all",
    "migrate:create": "sequelize-cli migration:generate",
    "seed": "sequelize-cli db:seed:all",
    "seed:undo": "sequelize-cli db:seed:undo:all",
    "db:reset": "npm run migrate:cli:undo:all && npm run migrate:cli && npm run seed",
    "test": "node test/test-logger.js",
    "test:logging": "node test/test-logging.js",
    "test-setup": "ts-node test-setup.ts",
    "lint": "eslint . --ext .ts",
    "docker:build": "docker build -t wabot-app .",
    "docker:run": "docker run -p 3000:3000 wabot-app",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f wabot",
    "docker:restart": "docker-compose restart wabot",
    "health": "node -e \"console.log('Health check passed')\"",
    "prod:build": "npm run build && npm prune --production",
    "prod:start": "NODE_ENV=production npm start"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "typescript",
    "n8n",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "description": "WhatsApp Bot application using TypeScript with PostgreSQL and N8N integration",
  "dependencies": {
    "@open-wa/wa-automate": "^4.76.0",
    "@types/cron": "^2.0.1",
    "@types/node": "^22.15.21",
    "axios": "^1.9.0",
    "cron": "^4.3.0",
    "dotenv": "^16.5.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.48",
    "node-cron": "^4.0.7",
    "nodemon": "^3.1.10",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/sequelize": "^4.28.20",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "sequelize-cli": "^6.6.3"
  }
}
