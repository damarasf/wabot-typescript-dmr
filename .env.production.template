# =============================================================================
# WhatsApp Bot Environment Configuration Template
# =============================================================================
# Copy this file to .env and configure the values for your deployment
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=wabot_db
DB_USER=wabot_user
DB_PASSWORD=your_very_secure_database_password_here

# =============================================================================
# BOT CONFIGURATION
# =============================================================================
BOT_NAME=DMR Bot
OWNER_NUMBER=62xxxxxxxxxx

# =============================================================================
# N8N INTEGRATION
# =============================================================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
N8N_API_KEY=your_n8n_api_key_here

# =============================================================================
# USAGE LIMITS
# =============================================================================
DAILY_LIMIT_FREE=10
DAILY_LIMIT_PREMIUM=100
DAILY_LIMIT_ADMIN=1000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_PORT=3000
NODE_ENV=production

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# TIMEZONE
# =============================================================================
TIMEZONE=Asia/Jakarta

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=50m
LOG_FILE_MAX_FILES=5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SESSION_SECRET=your_very_secure_session_secret_minimum_32_characters
JWT_SECRET=your_jwt_secret_for_authentication_tokens

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_NOTIFICATION_WEBHOOK=

# =============================================================================
# MONITORING & HEALTH CHECK
# =============================================================================
HEALTHCHECK_URL=
MONITORING_WEBHOOK=
ALERT_WEBHOOK=

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_CONCURRENT_SESSIONS=1
SESSION_TIMEOUT=300000
MESSAGE_RETRY_LIMIT=3

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_VOICE_MESSAGES=true
ENABLE_MEDIA_DOWNLOAD=true
ENABLE_GROUP_FEATURES=true
ENABLE_ADMIN_COMMANDS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=30

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
WEATHER_API_KEY=
TRANSLATE_API_KEY=
AI_SERVICE_URL=
AI_SERVICE_API_KEY=

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASS=
EMAIL_FROM=
ADMIN_EMAIL=

# =============================================================================
# DEBUG SETTINGS (Development Only)
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_MESSAGE_HISTORY=true

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# These variables are used by docker-compose.yml
POSTGRES_DB=${DB_NAME}
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
